<div class="customer-order-container">
  <h3>Customer Order <small>(Table: <%= @order.table %> Price: <%= @order.total_price %>)</small></h3>

  <p class="py-3"><%= @svg.html_safe %></p>

  <div class="customer-table">
    <div class="table-head">
      <div class="table-row">
        <div class="table-header">Dish</div>
        <div class="table-header">Updated</div>
        <div class="table-header">Status</div>
        <div class="table-header">Control</div>
      </div>
    </div>
    <div class="table-body" id="orders" data-order-id="<%= @order.id %>">
      <% @order.order_items.order(updated_at: :desc).each do |item| %>
        <%= render 'order_items/order_item', item: item, control: true %>
      <% end %>
    </div>
  </div>
</div>




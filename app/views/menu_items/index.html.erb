<div class="row">
  <div class="menu-item-toolbar">
    <%= simple_form_for :query, url: menu_items_path, method: :get do |f| %>
      <div class="input-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Find your products..." />
        <div class="input-group-append">
          <button name="button" type="submit" class="btn btn-success"><i class="fas fa-search"></i></button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <% @menu_items.each do |item| %>
    <div class="col-4 py-2">
      <div class="staff-menu-item-card shadow">
        <%= cl_image_tag item.photo.key, crop: :fill, class: 'menu-item-image' %>
        <div class="menu-item-info row">
          <div class="menu-item-info-details col-8">
            <p><b><%= item.name %></b></p>
            <p><%= item.description %></p>
          </div>
          <div class="col-4">
            <div class="row">
              <div class="d-flex align-items-center justify-content-end col">
                <p><%= item.category %></p>
              </div>
            </div>
            <div class="row">
              <div class="d-flex align-items-center justify-content-end col">
                <p>Â¥<%= item.price %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
